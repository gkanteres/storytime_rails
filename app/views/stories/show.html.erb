<h1><%= @story.title %></h1>
<h3>Created By: <%= @story.user.username %></h3>
<% @sentences.each do |sentence| %>
  <%= link_to sentence.content, story_sentence_path(@story, sentence) %>
<% end %>
<br /><br />
<%= link_to 'Add new sentence', new_story_sentence_path(@story ) %>
<br /><br />

<%= link_to 'Edit Story', edit_story_path(@story) %> |
<%= link_to(story_path(@story),
  data: {
    confirm: 'Delete story?',
    method: 'delete'}) do %>
    Delete Story
  <% end %>
